.middle-box.text-center.loginscreen.animated.fadeInDown
  %div
    %h1.logo-name Chat
  %h3 Register to Chat App
  %p Create account to see it in action.
  = form_with(model: resource, as: resource_name, url: registration_path(resource_name), class: "m-t", local: true) do |f|
    = devise_error_messages!
    .form-group
      = f.text_field :first_name, class: "form-control", autofocus: true, required: true, placeholder: "First Name"
    .form-group
      = f.text_field :last_name, class: "form-control", autofocus: true, required: true, placeholder: "Last Name"
    .form-group
      = f.email_field :email, class: "form-control", autofocus: true, required: true, placeholder: "Email"
    .form-group
      = f.password_field :password, class: "form-control", autofocus: true, required: true, placeholder: "Password"
    .form-group
      = f.password_field :password_confirmation, class: "form-control", autofocus: true, required: true, placeholder: "Password Confirmation"
    = f.submit "Register", class: "btn btn-primary block full-width m-b"
    %p.text-muted.text-center
      %small Already have an account?
    = link_to "Login", new_session_path(resource_name), class: "btn btn-white btn-block"
    %br
    %br
